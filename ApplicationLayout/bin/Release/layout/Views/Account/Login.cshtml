@model ApplicationLayout.ViewModels.LoginViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Application Layout Template</title>
    @Styles.Render("~/Content/css")

</head>
<body class="login">

    <header>
        <div class="container">
            <div class="col-xs-12 col-md-8 logo">
                <img src="~/Content/images/" title="metrobank" alt="metrobank">
                <h1>Application Layout Template</h1>
            </div>
            <div class="col-xs-12 col-md-4 pull-right  text-right">
                <h6><br /><br /></h6>
            </div>
        </div>
    </header>

    <nav class="mainnav"> </nav>

    <section>
        <div class="container">
            <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <div class="panel-title">Sign In</div>
                    </div>
                    <div style="padding-top:30px" class="panel-body">

                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" , name = "login", id = "loginform" }))
                        {
                            @Html.AntiForgeryToken()

                            if (Html.ViewData.ModelState.IsValid == false)
                            {
                                <div id="login-alert" class="alert alert-danger col-sm-12">@Html.ValidationSummary()</div>
                            }

                            <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                <input id="login-username" type="text" class="form-control" name="username" value="" placeholder="username or email" required="required">
                            </div>

                            <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                <input id="login-password" type="password" class="form-control" name="password" placeholder="password" required="required">
                            </div>

                            <div style="margin-top:10px" class="form-group">
                                <!-- Button -->
                                <div class="col-sm-12 controls">
                                    <input type="submit" value="Login" class="btn btn-metrobank-black" id="btn-login" style="width: 100%" />
                                </div>
                            </div>

                        }

                        <div class="form-group suportedbrowser">
                            <h5>Supported Browsers</h5>
                            <div class="icons">
                                <i class="lxksprite ic mozzilla" title="Mozilla"> </i>
                                <i class="lxksprite ic chrome" title="chrome"> </i>
                                <i class="lxksprite ic ie" title="ie"> </i>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer>
        <div class="container">
            <hr />
            <div class="col-xs-12 col-md-6 cright" style="padding: 0px;">
                <img src="~/Content/images/" class=" footerlogo" title="metrobank" alt="metrobank">
                <p>metrobank Cebu</p>
                <p>&copy; @DateTime.Now.Year All rights reserved.</p>
            </div>
            <div class="col-xs-12 col-md-6 text-right powered" style="padding: 0px;">
                <img src="~/Content/images/.png" class="cebuit" title="SMD" alt="SMD">
                <p>Powered by:</p>

            </div>
        </div>
    </footer>

</body>
</html>
