<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Application Layout Template</title>
    
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <header>
        <div class="container">
            <div class="col-xs-12 col-md-8 logo">
                <img src="~/Content/images/" title="" alt="">
                <h1>Application Layout Template</h1>
            </div>
            <div class="col-xs-12 col-md-4 pull-right  text-right">
                <h6>
                    Welcome, Name Here<br />
                    @DateTime.Now.DayOfWeek, @DateTime.Now.ToString("MMMM dd, yyyy hh:mm:ss tt")
                </h6>
            </div>
        </div>
    </header>

    <nav class="mainnav">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html"> Menu </a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="@Html.CurrentMenu("home")"><a href="~/Home/Index">Home</a></li>
                    <li class="@Html.CurrentMenu("maintenance")"><a href="~/Maintenance/Index">Maintenance</a></li>
                    <li class="@Html.CurrentMenu("transactions")">
                        <a href="~/Transactions/Index">Transaction Summary <span class="badge">10</span></a>
                    </li>
                    <li class="@Html.CurrentMenu("reports")"><a href="~/Reports/Index">Reports</a></li>
                    <li class="@Html.CurrentMenu("help")"><a href="~/Help/Index">Help &amp; FAQ</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dropdown <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="~/Help/Elements">Elements</a></li>
                            <li><a href="~/Help/Icons">Icons</a></li>
                        </ul>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="~/Account/LogOut">Logout</a></li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <section>
        <div class="container">
            @RenderBody()
        </div>
    </section>

    <footer>
        <div class="container">
            <hr />
            <div class="col-xs-12 col-md-6 cright" style="padding: 0px;">
                <!--<img src="~/Content/images/" class=" footerlogo" title="" alt="">                -->
                <p>Download this app at <a href="https://github.com/jtlimson/ASP-mvc-web-template">git hub <span> <i class="fa fa-github"></i></span></a></p>
            </div>
            <div class="col-xs-12 col-md-6 text-right powered" style="padding: 0px;">
          
                <p>Powered by:</p>

            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
